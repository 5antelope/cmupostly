CREATE TABLE users (
	user_name    varchar(50) CHECK (char_length(user_name)>1),
	password  integer NOT NULL,
	PRIMARY KEY (user_name)
);

CREATE TABLE posts (
	pID	serial,
    author varchar(50),
    time_stamp integer,
    title char(50),
    content char(100),
    PRIMARY KEY (pID),
    FOREIGN KEY (author) REFERENCES users(user_name)
);

CREATE TABLE likes(
	pID serial,
	user_name varchar(50),
	PRIMARY KEY (pID, user_name),
	FOREIGN KEY (pID) REFERENCES posts(pID),
	FOREIGN KEY (user_name) REFERENCES users(user_name)
);









