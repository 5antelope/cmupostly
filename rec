CREATE TABLE users (
	user_name    varchar(50) CHECK (char_length(user_name)>1),
	password  integer NOT NULL,
	PRIMARY KEY (user_name)
);

CREATE TABLE posts (
	pID	serial primary key,
    author varchar(50),
    time_stamp integer,
    title char(50),
    content char(100),
    PRIMARY KEY (author, time_stamp),
    FOREIGN KEY (author) REFERENCES users(user_name)
);

CREATE TABLE likes(
	author varchar(50),
	time_stamp integer,
	user_name varchar(50),
	PRIMARY KEY (author, time_stamp, user_name),
	FOREIGN KEY (author, time_stamp) REFERENCES posts(author, time_stamp),
	FOREIGN KEY (user_name) REFERENCES users(user_name)
);









